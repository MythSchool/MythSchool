@model PFmyschool.Models.Escuelas

@{
    ViewData["Title"] = "Escuelas Page";
    Layout = "_LayoutDashboard";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
<link rel="stylesheet" href="~/css/sitedashboard.css">

<br></br>
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar escuela</strong></h1>

            </div>

            <div class="card-body">


                <form asp-action="EditarEscuelas" method="post">

                    <input type="hidden" asp-for="PkEscuela" />


                    <div class="form-group">
                        <label asp-for="NomEscuela">Nombre de la escuela</label>
                        <input asp-for="NomEscuela" class="form-control" placeholder="Ingresar el nombre de la escuela" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="ImagEscuela">Imagen</label>
                        <input asp-for="ImagEscuela" class="form-control" placeholder="Ingresar la URL de la imagen de la escuela" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="DescEscuela">Descripción de la escuela</label>
                        <input asp-for="DescEscuela" class="form-control" placeholder="Ingresar la descripción de la escuela" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="PuntEscuela">Puntuación</label>
                        <input asp-for="PuntEscuela" class="form-control" placeholder="Ingresar la puntuación" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="LinkEscuela">Link de la escuela</label>
                        <input asp-for="LinkEscuela" class="form-control" placeholder="Ingresar el link de la escuela" required />

                    </div>


                    <div class="col-sm">
                        <label class="visually-hidden" for="autoSizingSelect">Editar Ubicación  </label>
                        <select asp-for="FkUbicacion" asp-items="ViewBag.Ubicacion" class="form-select" id="autoSizingSelect" class="select2-placeholder-multiple form-control">
                            <option value="">--Selecciona--</option>
                        </select>

                    </div>


                    <div class="col-sm">
                        <label class="visually-hidden" for="autoSizingSelect">Editar Nivel  </label>
                        <select asp-for="FkNivel" asp-items="ViewBag.Nivel" class="form-select" id="autoSizingSelect" class="select2-placeholder-multiple form-control">
                            <option value="">--Selecciona--</option>
                        </select>

                    </div>


                    <div class="col-sm">
                        <label class="visually-hidden" for="autoSizingSelect">Editar Sostenimiento  </label>
                        <select asp-for="FkSostenimiento" asp-items="ViewBag.Sostenimiento" class="form-select" id="autoSizingSelect" class="select2-placeholder-multiple form-control">
                            <option value="">--Selecciona--</option>
                        </select>

                    </div>

                    <div class="row">
                        <div class="col-6"><button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-file-pen"></i> Guardar cambios </button></div>
                        <div class="col-6"><a class="btn btn-outline-dark" asp-controller="User" asp-action="AdminEsc"><i class="fa-duotone fa-turn-down-left"></i>Volver </a></div>
                    </div>


                </form>
                <br />



            </div>


        </div>


    </div>


</div>