@model IEnumerable<PFmyschool.Models.OfertasEdu>


@{
    ViewData["Title"] = "Escuelas Page";
    Layout = "_LayoutDashboard";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
<link rel="stylesheet" href="~/css/sitedashboard.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">

<br />

<div class="row" style="margin-left:0%;">
    <a asp-action="RegistrarOfer" asp-controller="User" class="btn-success mx-auto btn-lg"><i class="fa-sharp fa-solid fa-graduation-cap"></i>   Añadir Oferta educativa</a>
</div>


<br />
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de Escuelas</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {

                        <table class="display compact" id="tblEscuelas" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    @* <th> Id</th>*@
                                    <th> Nombre</th>
                                    <th> Descripción</th>
                                    <th> Institución</th>


                                    <th> Acciones</th>
                                </tr>


                            </thead>
                            <tbody>
                                @*@int i =0*@
                                @foreach (var Item in Model)
                                {


                                <tr>

                                    @*<td>(@i++)</td>*@

                                    <td>  @Html.DisplayFor(x => Item.NomOferta) </td>
                                    <td> @Html.DisplayFor(x => Item.DescOferta)</td>
                                    <td> @Html.DisplayFor(x => Item.Escuelas.NomEscuela)</td>
                                    <td>
                                        <a class=" btn btn-warning" asp-action="EditarCar" asp-controller="User" style="color:white" asp-route-id=@Item.PkOfertasEdu><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a class=" btn btn-danger" asp-action="EliminarOferta" asp-route-id=@Item.PkOfertasEdu id="Obtener"><i class="fa-solid fa-trash"></i></a>
                                    </td>

                                </tr>


                                }

                            </tbody>

                        </table>

                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>

            </div>


        </div>


    </div>




</div>


