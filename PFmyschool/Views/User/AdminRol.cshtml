@model IEnumerable<PFmyschool.Models.Rol>

@{
    ViewData["Title"] = "Roles Page";
    Layout = "_LayoutDashboard";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
<link rel="stylesheet" href="~/css/sitedashboard.css">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<br />

<div class="row">
    <div class="offset-10 col-3 mb-3">
        <a asp-action="CrearRol" asp-controller="User" class="btn-success mx-auto btn-lg"> <i class="fa-solid fa-key"></i>   Nuevo Rol</a>
    </div>
</div>



<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Roles</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {

                        <table class="table table-bordered" id="tblRol" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    @* <th> Id</th>*@
                                    <th> @Html.DisplayNameFor(x => x.PkRol )</th>
                                    <th> @Html.DisplayNameFor(x => x.Nombre )</th>
                                    <th> Acciones</th>
                                </tr>


                            </thead>
                            <tbody>
                                @*@int i =0*@
                                @foreach (var Item in Model)
                                {


                                    <tr>

                                        @*<td>(@i++)</td>*@
                                        <td> @Html.DisplayFor(x => Item.PkRol )</td>
                                        <td> @Html.DisplayFor(x => Item.Nombre )</td>

                                        <td>
                                            <a class=" btn btn-warning" asp-action="EditarRol" asp-route-id=@Item.PkRol><i class="fa-solid fa-file-pen"></i> Editar</a>

                                            <button onclick="document.getElementById('id01').style.display='block'" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Eliminar</button>

                                            <div id="id01" class="w3-modal">
                                                <div class="w3-modal-content">
                                                    <div class="w3-container">
                                                        <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                                                        <br />
                                                        <br />
                                                        <strong>¿Estas seguro que deseas eliminar este registro?</strong>
                                                        <p>Esta accion no se puede deshacer</p>
                                                        <br />
                                                        <a class=" btn btn-warning" asp-action="EliminarRol" asp-route-id=@Item.PkRol><i class="fa-solid fa-pen-to-square"></i> Aceptar</a>
                                                        <br />
                                                    </div>
                                                </div>
                                            </div>


                                        </td>

                                    </tr>


                                }

                            </tbody>

                        </table>

                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>

            </div>


        </div>


    </div>




</div>


