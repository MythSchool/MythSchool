<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PFmyschool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/MenuStyle.css">
    <script src="https://kit.fontawesome.com/590d7b9e48.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="hidden">

            <a asp-action="Index" asp-controller="Home" class="logopequeno"><img src="~/images/LogoCorto.png" height="45" width="50"></a><img src="~/images/Menu/MythSchool.png" id="logcort" class="Mythlogo"><a class="espacio2"></a>



            <div class="buscarMain">
                <input placeholder="Buscar por nombres, carreras, niveles, etc..." class="bar" type="search"><a href="Menu.html" class="abus"><button type="button" class="Buscar"><img src="~/images/Main/Lupa2.png" class="lupa" height="20" width="20"></button></a>
            </div>
            <a class="espacio"></a>

            <div class="dropdown">
                <img src="~/images/Menu/user.png" class="logo" height="40" width="40">
                <div class="dropdown-content">
                    <a asp-action="Login" asp-controller="User" class="linkuser"><p><img src="~/images/Menu/enter.png" class="logo" height="20" width="20"> Iniciar Sesion</p></a>
                    <a asp-action="Registro" asp-controller="User" class="linkuser"><p><img src="~/images/Menu/edit.png" class="logo" height="20" width="20"> Registrarse</p></a>
                    <a asp-action="RegistrarEscuela" asp-controller="Home" class="linkuser"><p><img src="~/images/Menu/stationery.png" class="logo" height="20" width="20"> Registrar Escuela</p></a>
                </div>
            </div>


        </nav>
    </header>
   <main role="main" class="pb-3">
            @RenderBody()
        </main>
 

    <footer>

  <!-- Footer -->
  <div class="footerMain">
