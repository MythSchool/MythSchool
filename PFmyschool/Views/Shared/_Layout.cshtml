      <br></br>
      <ul>
        <a href="Acerca.html" class="links"><li>Acerca de nosotros   <i class="fa-solid fa-circle-info"></i></li></a>
      </ul>
    </div>
    <div class="col">
      <br></br>
      <ul>
        <a href="TerminosYCondiciones.html" class="links"><li>Terminos y condiciones   <i class="fa-solid fa-book"></i></li></a>
      </ul>
    </div>
    <div class="col">
      <br></br>
      <ul>
        <a href="contactanos.html" class="links"><li>Contactanos   <i class="fa-solid fa-envelope"></i></li> </a>
        <br></br>
  <br></br>
      </ul>
    </div>

    <div class="col">
      <br></br>
      <ul>
        <h6>ver 2.6.0  <i class="fa-solid fa-code-compare"></i></h6> 
        <br></br>
  <br></br>
      </ul>
    </div>
  </div>
  </div>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
