<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v15.0" nonce="8nrKWt3K"></script>

<div id="main" class="NVIAR">
    <div class="in">
        <div id="img" class="InformacionP">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @if (Model.Count() > 0)
                        {
                            int i = 0;
                            @foreach (var item in Model)
                            {

                                if (i < 1)
                                {
                                    <img id="myImg" src="@Html.DisplayFor(x => item.Escuelas.ImagEscuela)" class="d-block w-100" height="300" alt="...">
                                }
                                i++;

                            }
                        }



                        <div id="myModal" class="modal">
                            <span class="close">&times;</span>
                            <img class="modal-content" id="img01">
                            <div id="caption"></div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>


        </div>

        <div class="informacionb">
            @if (Model.Count() > 0)
            {
                int g = 0;
                @foreach (var item in Model)
                {
                    if (g < 1)
                    {
                        <div class="cardboy">
                            <li class="cardlist"><h1 class="cardtitulo"><i class="fa-solid fa-school-flag">  </i><p style="margin-left:8%;">  Nombre: </p></h1><p class="texto">@Html.DisplayFor(x => item.Escuelas.NomEscuela)</p></li>
                            <li class="cardlist"><h1 class="cardtitulo"><i class="fa-solid fa-location-dot">  </i><p style="margin-left:8%;">  Ubicación: </p></h1><p class="texto">@Html.DisplayFor(x => item.Escuelas.Ubicacion.NombreUbi) / @Html.DisplayFor(x => item.Escuelas.Ubicacion.Localidad.NomLocalidad)</p></li>
                            <li class="cardlist"><h1 class="cardtitulo"><i class="fa-solid fa-up-down">  </i><p style="margin-left:8%;">  Nivel: </p></h1><p class="texto">@Html.DisplayFor(x => item.Escuelas.Nivel.NomNivel)</p></li>
                            <li class="cardlist"><h1 class="cardtitulo"><i class="fa-solid fa-sack-dollar">  </i><p style="margin-left:8%;">  Sostenimiento: </p></h1><p class="texto">@Html.DisplayFor(x => item.Escuelas.Sostenimiento.NomSostenimiento)</p></li>
                            <div class="puntuacion">
                                <li class="cardlist">
                                    <h1 class="cardtitulo">  Puntuacion media: </h1>
                                    @for (var i = 0; i < Convert.ToInt32(Html.ValueFor(x => item.Escuelas.PuntEscuela)); i++)
                                    {
                                        <img src="~/images/Informacion/silueta-de-estrella-negra.png" height="20px" width="20px">
                                    }

                                </li>
                            </div>

                        </div>
                    }
                    g++;
                }
            }

        </div>
        <div class="pot">
            <button id="ac0" class="fakeacord"><i class="fa-solid fa-comments"></i> Comentarios</button>
        </div>
        <script src="https://utteranc.es/client.js"
                repo="MythSchool/gestion-comentarios"
                issue-term="pathname"
                theme="github-light"
                crossorigin="anonymous"
                async>
        </script>
    </div>


    <div id="mainRel" class="InfRelevante">
        <button id="ac1" class="accordion"><i class="fa-solid fa-circle-info"></i> Información</button>
        <div class="panel">

            @if (Model.Count() > 0)
            {
                int i = 0;
                @foreach (var item in Model)
                {
                    if (i < 1)
                    {
                       <p>@Html.DisplayFor(x => item.Escuelas.DescEscuela)</p>
                     }
                    i++;

                }

            }



        </div>

        <button id="ac2" class="accordion"><i class="fa-sharp fa-solid fa-graduation-cap"></i> Ofertas Educativas</button>
        <div class="panel">
            @if (Model.Count() > 0)
            {
                int i = 0;
                if (i < 1)
                {
                    @foreach (var item in Model)
                    {
            
            <a style="text-decoration:none;" asp-action="DescripcionCarrera" asp-route-id=@item.PkOfertasEdu>
                <li>
                    @Html.DisplayFor(x => item.NomOferta)
                </li>
            </a>
                       
                    }
                }
                i++;

            }

        </div>

        @if (Model.Count() > 0)
        {
            int i = 0;
            @foreach (var item in Model)
            {
                if (i < 1)
                {
                    <a target="_blank" href="@Html.DisplayFor(x => item.Escuelas.LinkEscuela)"><button class="accordion"><i class="fa-solid fa-link"></i> Pagina web oficial</button></a>
                }
                i++;

            }
        }


        <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartir</a></div>


    </div>






</div>

<script src="~/js/js_Informacion.js"></script>


<script>

    var modal = document.getElementById("myModal");
    var img = document.getElementById("myImg");
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");

    img.onclick = function () {
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    var popover = new bootstrap.Popover(document.querySelector('.popover-dismiss'), {
        trigger: 'focus'
    })



    

</script>